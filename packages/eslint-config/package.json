  "devDependencies": {
    "@kasoa/tsconfig": "workspace:*",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^24.9.2",
    "@typescript/native-preview": "^7.0.0-dev.20251101.1",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "eslint": "^9.35.0"
  },
  "engines": {
    "node": ">=24"
  }
